@model IPagedList<Product>
  
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <div class="thumbnail">
                <img alt="@product.Name" src="data:image/svg+xml;base64,">
                <div class="caption">

                    <h3>
                        <span>Price: <strong>@product.Price.ToString("C")</strong></span>
                    </h3>

                    <p class="@(product.Inventory>0?"alert alert-success":"alert alert-danger")"> @product.Name</p>

                    <p class="text-muted">
                        <span>Status: <strong class="text-success" id="product-item-inventory-@product.Id">@product.Inventory</strong> items are in stock </span>
                    </p>
                    
                    @if (Request.IsAuthenticated)
                    {
                        <p>
                            <button class="btn btn-danger" onclick="getCard(@product.Id)" role="button">Add to Card</button>
                        </p>
                    }
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center" id="pager1">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>