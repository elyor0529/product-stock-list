@model IPagedList<Product>
  
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <div class="thumbnail">
                <img alt="@product.Name" src="data:image/svg+xml;base64,">
                <div class="caption">

                    <h3 class="@(product.Orders.Count>0?"alert alert-success":"")"> @product.Name</h3>
                     
                    <p class="text-muted">
                        <span>Price: <strong>@product.Price.ToString("C")</strong></span>  Status: <span class="text-success">@product.Inventory items are in stock</span>
                    </p>

                    <p>
                        <button class="btn btn-danger" onclick="addCard(@product.Id)" role="button">Add to Card</button>
                    </p>
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center" id="pager1">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>